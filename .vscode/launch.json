    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch 4 Cores",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core-core/core-core",
            "args": ["4", "5", "20", "21"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch 2 Cores",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core-core/core-core",
            "args": ["4", "5"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch 2 Cores NUMA",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core-core/core-core",
            "args": ["4", "12"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}